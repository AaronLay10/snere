  # Production Web Frontend (Port 3002)
  sentient-web-prod:
    build:
      context: ./services/sentient-web
      dockerfile: Dockerfile
      args:
        NODE_ENV: production
        VITE_API_URL: ${API_URL:-https://sentientengine.ai}
    container_name: sentient-web-prod
    profiles: ["production"]
    restart: unless-stopped
    environment:
      NODE_ENV: production
      PORT: 3002
