################################################################################
# SENTIENT ENGINE - DUAL-ENVIRONMENT DOCKER COMPOSE
################################################################################
#
# This file supports both production and development environments using Docker
# Compose profiles. Services are separated into dedicated networks to provide
# isolation while allowing shared infrastructure (postgres, mosquitto, nginx).
#
# USAGE:
#   Production:  docker-compose --profile production up -d
#   Development: docker-compose --profile development up -d
#   Both:        docker-compose --profile production --profile development up -d
#
# NETWORKS:
#   - sentient-shared: Shared infrastructure (postgres, mosquitto, nginx)
#   - sentient-production: Production services only (172.20.0.0/16)
#   - sentient-development: Development services only (172.21.0.0/16)
#
# PORT MAPPING:
#   - Production: 3000-3004, 3200, 9090, 3100
#   - Development: 4000-4004, 4200, 9190, 4100 (offset +1000)
#
# DATABASES:
#   - Production: sentient (user: sentient_prod)
#   - Development: sentient_dev (user: sentient_dev)
#
################################################################################

services:
  ################################################################################
  # SHARED INFRASTRUCTURE (No Profile - Always Available)
  ################################################################################

  # PostgreSQL Database - Hosts both production and development databases
  postgres:
    image: postgres:16-alpine
    container_name: sentient-postgres
    restart: unless-stopped
    environment:
      POSTGRES_USER: ${POSTGRES_USER:-sentient_prod}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      PGDATA: /var/lib/postgresql/data/pgdata
    ports:
      - "5432:5432"
    volumes:
      - ./volumes/postgres-data:/var/lib/postgresql/data
      - ./config/postgres/init:/docker-entrypoint-initdb.d:ro
    networks:
      - sentient-shared
      - sentient-production
      - sentient-development
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-sentient_prod}"]
      interval: 10s
      timeout: 5s
      retries: 5
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=postgres"

  # Mosquitto MQTT Broker - Shared message broker for all environments
  mosquitto:
    image: eclipse-mosquitto:2
    container_name: sentient-mosquitto
    restart: unless-stopped
    environment:
      MQTT_USER: ${MQTT_USER}
      MQTT_PASSWORD: ${MQTT_PASSWORD}
    ports:
      - "1883:1883"
      - "9001:9001"
    volumes:
      - ./config/mosquitto/mosquitto.conf:/mosquitto/config/mosquitto.conf:ro
      - ./config/mosquitto/mosquitto_passwd:/mosquitto/config/mosquitto_passwd:ro
      - ./config/mosquitto/mosquitto.acl:/mosquitto/config/mosquitto.acl:ro
      - ./volumes/mosquitto-data:/mosquitto/data
      - ./volumes/mosquitto-logs:/mosquitto/log
    networks:
      - sentient-shared
      - sentient-production
      - sentient-development
    healthcheck:
      test: ["CMD-SHELL", "mosquitto_sub -h localhost -p 1883 -u $${MQTT_USER} -P $${MQTT_PASSWORD} -t '$$SYS/#' -C 1 -W 3 || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=mosquitto"

  # Nginx Reverse Proxy - Routes traffic to production or development services
  nginx:
    image: nginx:1.25-alpine
    container_name: sentient-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./config/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./config/nginx/conf.d:/etc/nginx/conf.d:ro
      - ./config/nginx/ssl:/etc/nginx/ssl:ro
      - ./volumes/nginx-logs:/var/log/nginx
    networks:
      - sentient-shared
      - sentient-production
      - sentient-development
    healthcheck:
      disable: true
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=nginx"

  ################################################################################
  # PRODUCTION SERVICES (Profile: production)
  ################################################################################

  # Production API - Instance 1 (Port 3000)
  sentient-api-prod-1:
    build:
      context: ./services/api
      dockerfile: Dockerfile
      args:
        NODE_ENV: production
    container_name: sentient-api-prod-1
    profiles: ["production"]
    restart: unless-stopped
    environment:
      NODE_ENV: production
      PORT: 3000
      DATABASE_URL: postgresql://${POSTGRES_USER:-sentient_prod}:${POSTGRES_PASSWORD}@postgres:5432/sentient
      DB_HOST: postgres
      DB_PORT: 5432
      DB_NAME: sentient
      DB_USER: ${POSTGRES_USER:-sentient_prod}
      DB_PASSWORD: ${POSTGRES_PASSWORD}
      MQTT_BROKER_URL: mqtt://mosquitto:1883
      MQTT_USER: ${MQTT_USER}
      MQTT_PASSWORD: ${MQTT_PASSWORD}
      JWT_SECRET: ${JWT_SECRET}
      SESSION_SECRET: ${SESSION_SECRET}
    depends_on:
      postgres:
        condition: service_healthy
      mosquitto:
        condition: service_healthy
    networks:
      - sentient-production
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://127.0.0.1:3000/health || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=sentient-api-prod,instance=1"

  # Production API - Instance 2 (Port 3000)
  sentient-api-prod-2:
    build:
