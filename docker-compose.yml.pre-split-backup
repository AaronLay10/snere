    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=sentient-web-prod"

  # Production Prometheus (Port 9090)
  sentient-prometheus-prod:
    image: prom/prometheus:latest
    container_name: sentient-prometheus-prod
    profiles: ["production"]
    restart: unless-stopped
    ports:
      - "9090:9090"
    volumes:
      - ./config/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - ./config/prometheus/alerts:/etc/prometheus/alerts:ro
      - ./volumes/prometheus-data:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--web.console.libraries=/usr/share/prometheus/console_libraries'
      - '--web.console.templates=/usr/share/prometheus/consoles'
      - '--storage.tsdb.retention.time=30d'
    networks:
      - sentient-production
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:9090/-/healthy || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=prometheus-prod"

  # Production Grafana (Port 3200)
  sentient-grafana-prod:
    image: grafana/grafana:latest
    container_name: sentient-grafana-prod
    profiles: ["production"]
    restart: unless-stopped
    ports:
      - "3200:3000"
    environment:
      GF_SECURITY_ADMIN_PASSWORD: ${GRAFANA_PASSWORD}
      GF_USERS_ALLOW_SIGN_UP: "false"
      GF_SERVER_ROOT_URL: https://sentientengine.ai/grafana
      GF_INSTALL_PLUGINS: ""
    volumes:
      - ./config/grafana/datasources:/etc/grafana/provisioning/datasources:ro
      - ./config/grafana/dashboards:/etc/grafana/provisioning/dashboards:ro
      - ./volumes/grafana-data:/var/lib/grafana
    depends_on:
      - sentient-prometheus-prod
      - sentient-loki-prod
    networks:
      - sentient-production
    healthcheck:
      disable: true
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=grafana-prod"

  # Production Loki (Port 3100)
  sentient-loki-prod:
    image: grafana/loki:latest
    container_name: sentient-loki-prod
    profiles: ["production"]
    restart: unless-stopped
    ports:
      - "3100:3100"
    volumes:
      - ./config/loki/loki-config.yml:/etc/loki/loki-config.yml:ro
      - ./volumes/loki-data:/loki
    command: -config.file=/etc/loki/loki-config.yml
    networks:
      - sentient-production
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3100/ready || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=loki-prod"

  # Production Promtail (No exposed port)
  sentient-promtail-prod:
    image: grafana/promtail:latest
    container_name: sentient-promtail-prod
    profiles: ["production"]
    restart: unless-stopped
    volumes:
      - ./config/promtail/promtail-config.yml:/etc/promtail/promtail-config.yml:ro
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - /var/run/docker.sock:/var/run/docker.sock
    command: -config.file=/etc/promtail/promtail-config.yml
    depends_on:
      - sentient-loki-prod
    networks:
      - sentient-production
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=promtail-prod"

  ################################################################################
  # DEVELOPMENT SERVICES (Profile: development)
  ################################################################################

  # Development API - Instance 1 (Port 4000)
  sentient-api-dev-1:
    build:
      context: ./services/api
      dockerfile: Dockerfile.dev
      args:
        NODE_ENV: development
    container_name: sentient-api-dev-1
    profiles: ["development"]
    restart: unless-stopped
    environment:
      NODE_ENV: development
      PORT: 4000
      CORS_ORIGIN: https://dev.sentientengine.ai,http://localhost:4002,http://localhost:3002
      DATABASE_URL: postgresql://sentient_dev:${POSTGRES_PASSWORD}@postgres:5432/sentient_dev
      DB_HOST: postgres
      DB_PORT: 5432
      DB_NAME: sentient_dev
      DB_USER: sentient_dev
      DB_PASSWORD: ${POSTGRES_PASSWORD}
      MQTT_BROKER_URL: mqtt://mosquitto:1883
      MQTT_USER: ${MQTT_USER}
      MQTT_PASSWORD: ${MQTT_PASSWORD}
      JWT_SECRET: ${JWT_SECRET}
      SESSION_SECRET: ${SESSION_SECRET}
    ports:
      - "4000:4000"
      - "9229:9229"  # Debug port
    volumes:
      - ./services/api:/app
      - /app/node_modules
    depends_on:
      postgres:
        condition: service_healthy
      mosquitto:
        condition: service_healthy
    networks:
      - sentient-development
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://127.0.0.1:4000/health || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "service=sentient-api-dev,instance=1"

