# Mythra Sentient Engine - API Service Environment Variables

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sentient
DB_USER=sentient
DB_PASSWORD=changeme123
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Authentication
JWT_SECRET=GENERATE_A_SECURE_RANDOM_SECRET_HERE
JWT_EXPIRES_IN=24h

# Password Hashing
BCRYPT_ROUNDS=10

